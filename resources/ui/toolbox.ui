<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ToolboxWidget" parent="GtkBox">
    <style>
      <class name="linked"/>
    </style>
    <child>
      <object class="GtkToggleButton" id="select_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Select mode</property>
        <child>
          <object class="GtkImage" id="select_img">
            <property name="icon-name">edit-select</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="edit_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Edit mode</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">pencil</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="cut_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Cut mode</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">cut-tool</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="erase_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Erase mode</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">draw-eraser</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="ramp_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Ramp mode</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">draw-line</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="audition_mode">
        <property name="focusable">1</property>
        <property name="receives_default">1</property>
        <property name="tooltip-text" translatable="true">Audition mode</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">audio-volume-high</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
