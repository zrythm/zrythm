set -e

tracktypes_dir="$MESON_INSTALL_DESTDIR_PREFIX/@TRACK_TYPES_DIR@"

# 'cp' or 'ln'
cmd1="@CMD1@"
# '-s' or 'empty'
cmd2="@CMD2@"
# '-f' or 'empty'
cmd3="@CMD3@"

declare -a icons=(
  "actions/bus"
  "actions/markers"
  "status/bars"
  "status/signal-audio"
  "status/signal-midi")

mkdir -p "$tracktypes_dir"
cd "$tracktypes_dir"
for icon in "${icons[@]}"; do
  $cmd1 $cmd2 $cmd3 ../$icon.svg ./
done
